<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Doctors</title>
</head>
<body>
    <h1>Doctors</h1>
{{#if msg}}
 <div class="alert alert-success" role="alert">
  {{msg}}
</div> 
{{/if}} 

{{#if msged}}
 <div class="alert alert-danger" role="alert">
  {{msged}}
</div> 
{{/if}} 
    <ul>
        {{#each doctor}}
    <li>
        

    <a href='/doctors/{{_id}}'>
     {{ name }}
     -
     {{specialist_id.name}}
     
      </a>
       <div>
        <a href="/doctors/edit/{{_id}}" class="btn btn-success" style="margin-left: 400px;" >Edit</a>

        <form onsubmit="return confirm('Are you sure you want to delete this Department')"
            action="/doctors/{{_id}}?_method=DELETE" method=post style="margin-left: 500px;margin-top: -38px;" >
            <button class="btn btn-danger" title="delete">
                delete
            </button>
        </form>

          </div>
      </li>
      {{/each}}
      </ul>
            <a href="/specialist" class="btn btn-dark">  Specialist</a>
            <a href="/hospital" class="btn btn-dark">Hospital</a>
            <a href="/doctors/create" class="btn btn-dark">Add Doctors</a>
            <a href="/workdoctors" class="btn btn-dark">Work Doctors</a>

</body>
</html>