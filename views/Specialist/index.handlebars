<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Specialist</title>
</head>

<body>
    <br>
    {{#if msg}}
    <div class="alert alert-success" role="alert">
        {{msg}}
    </div>
    {{/if}}

    {{#if msged}}
    <div class="alert alert-danger" role="alert">
        {{msged}}
    </div>
    {{/if}}
    <ul>
        {{#each specialists}}
        <li>


            <a href='/specialist/{{_id}}'>
                {{ name }}
                {{code}}
                {{photo}}
            </a>
            <div>
                <a href="/specialist/edit/{{_id}}" class="btn btn-success" style="margin-left: 400px;">Edit</a>

                <form onsubmit="return confirm('Are you sure you want to delete this Department')"
                    action="/specialist/{{_id}}?_method=DELETE" method=post
                    style="margin-left: 500px;margin-top: -38px;">
                    <button class="btn btn-danger" title="delete">
                        delete
                    </button>
                </form>

            </div>
        </li>
        {{/each}}
    </ul>
    <a href="/doctors" class="btn btn-dark">doctorsers</a>
    <a href="/specialist/create" class="btn btn-dark"> Create Specialist</a>
    <a href="/hospital" class="btn btn-dark">Hospital</a>
    <a href="/workdoctors" class="btn btn-dark">Work Doctors</a>
    <a href="/home/homepage" class="btn btn-dark">Home</a>
    <a href="/users" class="btn btn-dark">Users</a>

</body>

</html>